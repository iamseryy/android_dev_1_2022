<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleAppearance" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CounterAppearance" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">@dimen/counter_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressBarCircleStyle">
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_circle</item>
        <item name="android:rotation">-90</item>
    </style>

    <style name="SliderStyle" parent="Widget.Material3.Slider">
        <item name="android:stepSize">@dimen/slider_step_size</item>
        <item name="android:valueFrom">@dimen/slider_value_from</item>
        <item name="android:valueTo">@dimen/slider_value_to</item>
        <item name="android:value">@dimen/slider_value_default</item>
    </style>

    <style name="StartButtonAppearance" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">@dimen/start_button_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="StartButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:textAppearance">@style/StartButtonAppearance</item>
    </style>
</resources>