<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.M4_component" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_light</item>
        <item name="colorSecondaryVariant">@color/teal</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProgressIndicatorValueTextAppearance" parent="TextAppearance">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="MySwitchStyle" parent = "Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@sele</item>
    </style>

    <style name="Theme.M4_component" parent="Base.Theme.M4_component" />
</resources>